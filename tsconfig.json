{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowUmdGlobalAccess": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "types": [
      "angular",
      "node"
    ]
  },
  "exclude": [
    "out",
    "node_modules",
    "dist",
    "dev",
    "reports"
  ]
}
